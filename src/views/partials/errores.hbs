{{#if error}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Advertencia!!</strong> {{error}}
  <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
  </button>
</div>
{{/if}}

{{#each errors}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Advertencia!!</strong> {{text}}
  <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
  </button>
</div>
{{/each}}